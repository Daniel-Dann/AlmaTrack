<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlmaTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color de la status bar -->
        <item name="android:statusBarColor">@color/blue</item>

        <!-- Color primario y de acento -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>

        <!-- Color del campo de texto (underline y focus) -->
        <item name="colorControlActivated">@color/blue</item> <!-- Color al estar activo -->
        <item name="colorControlHighlight">@color/blue</item> <!-- Efecto de ripple -->
    </style>

    <style name="Theme.AlmaTrack" parent="Base.Theme.AlmaTrack" />

    <!-- Splash Screen Theme -->
    <style name="Theme.AlmaTrack.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item> <!-- Fondo negro -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_almatrack</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>